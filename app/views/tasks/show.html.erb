<div class="container">
  <h1><%= @task.title%></h1>
  <div class="task-flex">
    <div>
    <p id="completed"><%= @task.completed %></p>
    <p id="task-name"><%= @task.details %></p>
    </div>
    <div><%= link_to 'Edit task', edit_task_path(@task), class: 'btn' %></div>
  </div>
  <%= link_to 'Back to tasks', tasks_path, class: 'btn' %>
</div>
