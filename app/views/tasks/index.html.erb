<div class="container">
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
  <div class="task-flex">
    <%= check_box_tag('checkbox', checked: task.completed, disabled: true) %>
    <p id="task-name"><%= link_to task.title, task_path(task), class: "links"%></p>
    <p><%= link_to 'Delete', task_path(task), data: { turbo_method: :delete }%></p>
  </div>
  <% end %>
  <div class="task-flex">
    <p><%= link_to 'Add a task', new_task_path, class: "btn" %></p>
  </div>
</div>
